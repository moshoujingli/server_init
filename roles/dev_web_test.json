{
    "name":"dev_web_local",
    "description": "Use for configure a local dev web server",
    "json_class": "Chef::Role",
    "chef_type": "role",
    "override_attributes": {
      "php": {
        "install_method" : "source",
        "apache2" : "/usr/local/apache2/"
      }
    },
    "default_attributes": {
        "user":"greal",
        "passwd":"changeit",
        "apr":{"src_url":["http://ftp.riken.jp/net/apache//apr/apr-1.5.1.tar.gz"]},
        "apr-util":{"src_url":["http://ftp.riken.jp/net/apache//apr/apr-util-1.5.3.tar.gz"]},
        "apache2":{
            "local_path":"/usr/local/apache2",
            "src_url":["http://ftp.jaist.ac.jp/pub/apache//httpd/httpd-2.4.9.tar.gz","https://s3-ap-northeast-1.amazonaws.com/servercomp/httpd-2.4.9.tar.gz"],
            "port":[80,8080,443],
            "web_root":["/home/greal/webapp/"],
            "server_name":"masaker.com",
            "host_name":"masaker.com",
            "build_options":" --enable-so --with-included-apr --enable-nonportable-atomics=yes --with-z"
        },
        "mysql":{
            "local_path":"/usr/local/mysql",
            "src_url":["https://drive.google.com/uc?export=download&confirm=FWM-&id=0BxkUB7lvWaawMXhvaW1TSjdsLWs","https://s3-ap-northeast-1.amazonaws.com/servercomp/MySQL-5.6.19-1.el6.x86_64.rpm-bundle.tar"],
            "user":"root",
            "passwd":"changeit"
        }
    },
    "run_list": [
        "recipe[apache2]",
        "recipe[php]"
        // "recipe[mysql]"
    ]

}