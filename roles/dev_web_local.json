{
    "name":"dev_web_local",
    "description": "Use for configure a local dev web server",
    "json_class": "Chef::Role",
    "chef_type": "role",
    "override_attributes": {
        "apache2": {
        },
        "mysql": {
            "service_name": "mysqld",
            "server_root_password": "changeit",
            "port": "3306",
            "allow_remote_root": true,
            "remove_anonymous_users": true,
            "root_network_acl": ["192.158.56.1"]
        },
        "memcached": {
            "memory": "64MB",
            "user": "root",
            "port": "11211",
            "listen": "localhost",
            "maxconn": "1024",
            "logfilename": "memcached.log"
        },
        "php": {
            "install_method" : "source",
            "apxs" : "/usr/sbin/apxs"
        }
    },
    "run_list": [
        "recipe[apache2]",
        "recipe[mysql::server]",
        "recipe[memcached]",
        "recipe[php]"
    ]

}